    <property>
      <code>{{velocity output="false"}}
#macro (executeMacro)
  {{mathjax}}
    \begin{equation}
    #if("$!wikimacro.parameters.anchor" != "")
      #set($anchor = "$!wikimacro.parameters.anchor")
      ## based on https://tex.stackexchange.com/questions/18311/what-are-the-valid-names-as-labels
      ## this also makes sure we don't allow XWiki syntax injection by forbidding '"', '{', '}' and '$'
      #set($anchor = $anchor.replaceAll("[^!%&amp;()*+,\-./0123456789:;&lt;=&gt;?@ABCDEFGHIJKLMNOPQRSTUVWXYZ\[\]`abcdefghijklmnopqrstuvwxyz|]", ""))
      \label{$anchor}
    #end
    $wikimacro.content.replace("{{/", "{{ /")## try to avoid injection by removing the possibility to close the mathjax macro. Its content is not XWiki-parsed IIUC.
    \end{equation}
  {{/mathjax}}
#end
{{/velocity}}

{{velocity}}
## We need to check if there is a valid license because the macro is registered even if the user doesn't have view right
## on the macro definition page. See XWIKI-14828: Rendering macros defined in wiki pages are available to users that
## don't have view right on those pages.
#if ($services.promacrolicensing.hasLicensureForEntity($xcontext.macro.doc.documentReference))
  #executeMacro
#else
  {{missingLicenseMessage extensionName="proMacros.extension.name"/}}
#end
{{/velocity}}</code>
