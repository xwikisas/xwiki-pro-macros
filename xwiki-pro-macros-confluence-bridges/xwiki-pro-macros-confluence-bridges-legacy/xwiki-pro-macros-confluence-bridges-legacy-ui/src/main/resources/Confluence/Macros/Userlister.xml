## We need to check if there is a valid license because the macro is registered even if the user doesn't have view right
## on the macro definition page. See XWIKI-14828: Rendering macros defined in wiki pages are available to users that
## don't have view right on those pages.
#if ($services.promacrolicensing.hasLicensureForEntity($xcontext.macro.doc.documentReference))
  #set ($confluenceGroups = $stringtool.split("$!wikimacro.parameters.groups", ","))
  #set ($xwikiGroups = [])
  #foreach ($untrimmedConfluenceGroup in $confluenceGroups)
    #set ($confluenceGroup = $untrimmedConfluenceGroup.trim())
    #if ($confluenceGroup == '*')
      #set ($xwikiGroups = [])
      #break
    #end
    #if ($confluenceGroup.startsWith('site-admins') || $confluenceGroup.startsWith('confluence-admins') || $confluenceGroup == 'administrators')
      #set ($groupName = 'XWikiAdminGroup')
    #elseif ($confluenceGroup.startsWith('site-users') || $confluenceGroup.startsWith('confluence-users') || $confluenceGroup == 'users')
      #set ($groupName = 'XWikiAllGroup')
    #elseif ($confluenceGrop != '')
      #set ($groupName = $confluenceGroup)
    #end
    #if ("$!groupName" != '')
      #set ($groupReference = $services.model.resolveDocument($groupName, 'group'))
      #set ($discard = $xwikiGroups.add($services.model.serialize($groupReference, 'local')))
    #end
  #end
  #set ($groups = $stringtool.join($xwikiGroups, ','))
  #set ($groups = $services.rendering.escape($groups, 'xwiki/2.1'))
  {{userList groups="$groups"/}}
#else
  {{missingLicenseMessage extensionName="proMacros.extension.name"/}}
#end
{{/velocity}}</code>
