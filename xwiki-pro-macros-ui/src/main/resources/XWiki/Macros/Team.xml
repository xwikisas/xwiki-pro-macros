    <property>
      <code>require(['jquery', 'xwiki-events-bridge'], function($) {
  function filter (teamDiv) {
    const l = this.value.toLowerCase();
    const users = teamDiv.getElementsByClassName('xwikiteam-user');
    for (let i = 0, len = users.length; i &lt; len; i++) {
      const user = users[i];
      user.style.display = (
        user.textContent.toLowerCase().includes(l) ||
        user.dataset.username.toLowerCase().includes(l) ||
        user.dataset.nameWithoutAccents.includes(l)
      ) ? "" : "none";
    }
  }

  function applyCheckbox(teamDiv, checkbox) {
    if (checkbox.checked) {
      teamDiv.classList.remove('xwikiteam-usernames-hidden');
    } else {
      teamDiv.classList.add('xwikiteam-usernames-hidden');
    }
  }

  function bindShowUsernameCheckbox(teamDiv, checkbox) {
    applyCheckbox(teamDiv, checkbox);
    checkbox.addEventListener('click', applyCheckbox.bind(null, teamDiv, checkbox));
  }

  function toggleTools(teamDiv, e) {
    const tools = teamDiv.querySelector('.xwikiteam-tools');
    if (tools) {
      tools.hidden = !tools.hidden;
      if (!tools.hidden) {
        const filterInput = tools.querySelector('.xwikiteam-filter');
        if (filterInput) {
          filterInput.focus();
        }
      }
    }
    if (e) {
      e.preventDefault();
    }
  }

  function initTools() {
    const teamDivs = document.getElementsByClassName('xwikiteam');
    for (let i = 0, len = teamDivs.length; i &lt; len; i++) {
      const teamDiv = teamDivs[i];
      const a = teamDiv.querySelector('.xwikiteam-tools-link a');
      if (a) {
        if (a.classList.has('initialized')) {
          continue; // don't initialize already initialized team macros
        }
        a.addEventListener('click', toggleTools.bind(null, teamDiv));
        a.classList.add('initialized');
        a.parentNode.hidden = false;
      }
      const ul = teamDiv.querySelector('.xwikiteam-ul');
      const tools = teamDiv.querySelector('.xwikiteam-tools');
      if (!tools) continue;
      const filterInput = tools.querySelector('.xwikiteam-filter');
      if (filterInput) {
        filterInput.addEventListener('keyup', filter.bind(filterInput, teamDiv));
        if (filterInput.value) {
          filter.call(filterInput, teamDiv);
          toggleTools(teamDiv)
        }
      }

      bindShowUsernameCheckbox(teamDiv, teamDiv.querySelector(".xwikiteam-show-username-checkbox"));
    }
  }

  $(function () {
    initTools();
    $('xwiki:dom:updated', initTools);
  });
});</code>
