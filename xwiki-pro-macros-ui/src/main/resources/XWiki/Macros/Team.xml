      <code>.xwikiteam .xwikiteam-ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.xwikiteam .xwikiteam-user, .xwikiteam-tools-link {
  padding: 0;
  margin: 0;
  text-align: center;
}

.xwikiteam .xwikiteam-user a {
  display:flex;
  flex-direction: column;
  align-items: center;
  margin: 0.4ex;
}

.xwikiteam .xwikiteam-avatar {
  border: 4px solid white;
  border-radius: 10em;
  box-shadow: 0 0 4px lighten(@gray-base, 70%);
  object-fit: cover;
  margin: 0.1ex;
  box-sizing: content-box;
}

.xwikiteam a:hover .xwikiteam-avatar {
  border-color: @link-hover-color;
}

.xwikiteam .xwikiteam-avatar-initials {
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-family: @font-family-base;
  overflow: hidden;
}

.xwikiteam .xwikiteam-avatar-initials-letters {
  display: inline-block; /* blocks underline in the avatar */
}

.xwikiteam a:focus .xwikiteam-avatar {
  border-color: currentcolor;
}

.xwikiteam-username {
  font-size: small;
  max-width: 12rem;
  hyphens: auto;
}

.xwikiteam-usernames-hidden .xwikiteam-username {
  display: none;
}

.xwikiteam + .xwikiteam-tools {
  display: block;
  visibility: hidden;
}

.xwikiteam-tools-link {
  visibility: hidden;
  align-self: center;
  padding: 1em;
}

.xwikiteam:focus-within, .xwikiteam:hover {
  .xwikiteam-tools-link {
    visibility: visible;
  }
