  margin-right: 0.5rem;
  transform: rotate(0deg);
  transition: transform 0.3s;
}

.confluence-expand-macro[open] &gt; summary .glyphicon {
  transform: rotate(90deg);
}

.confluence-expand-macro .panel-title{
  padding: @panel-heading-padding;
  display: flex;
}

.confluence-expand-macro .panel-body {
  transition: linear 0.3s;
}

.confluence-expand-macro summary {
  font-size: 1em;
}

.confluence-expand-macro summary:hover {
  cursor: pointer;
}

.panel-title:hover .title-text {
  cursor: pointer;
  text-decoration: underline;
}

.confluence-expand-macro.panel &gt; .panel-body, .confluence-expand-macro &gt; summary {
  background: unset;
  border: none;
}

.confluence-expand-macro.panel.panel-default .panel-body ul {
  list-style-type: revert;
  padding-left: revert;
}

.confluence-expand-macro.panel {
  background: unset;
