  #set($title = $wikimacro.parameters.get('title'))
  #set($withTitle = "$!title" != '')
  (% class="paste-code#if($withTitle) paste-code-with-title#end" %)(((
    #if("$!title" != '')
      (% class="paste-code-title" %)(((
        $title
      )))
    #end
    {{code language="$services.rendering.escape("$!language", $xwiki.currentContentSyntaxId)"}}
